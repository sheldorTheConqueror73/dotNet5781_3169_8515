<Window x:Class="dotNet5781_03B_3169_8515.addBusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotNet5781_03B_3169_8515"
        mc:Ignorable="d"
        Title="Add a New Bus" Height="450" Width="400">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border BorderThickness="0,0,3,0" Grid.RowSpan="4" Grid.Row="1" Grid.Column="0"  BorderBrush="SaddleBrown"/> 
        <Border BorderThickness="0,0,3,0" Grid.RowSpan="4" Grid.Row="1" Grid.Column="1"  BorderBrush="SaddleBrown"/>
        <Border BorderThickness="0,0,0,3" Grid.ColumnSpan="3" Grid.Row="0"  BorderBrush="SaddleBrown"/>
        <Border BorderThickness="0,0,0,3" Grid.ColumnSpan="3" Grid.Row="1"  BorderBrush="SaddleBrown"/>
        <Border BorderThickness="0,0,0,3" Grid.ColumnSpan="3" Grid.Row="2"  BorderBrush="SaddleBrown"/>
        <Border BorderThickness="0,0,0,3" Grid.ColumnSpan="3" Grid.Row="3"  BorderBrush="SaddleBrown"/>
        <Border BorderThickness="0,0,0,3" Grid.ColumnSpan="3" Grid.Row="4"  BorderBrush="SaddleBrown"/>
        

        <Label Content="Bus Id:" Grid.Row="1" Grid.Column="0" FontSize="17" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
        <TextBox Grid.Row="1"  Name="txbId" Grid.Column="1" IsHitTestVisible="False" Text="Enter Id Here" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" IsEnabled="True" Foreground="DarkGray" Margin="0,25,0,24" Height="35"/>


        <Label Content="Registration Date:" Grid.Row="2" Grid.Column="0" FontSize="17" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
        <DatePicker Name="dpRegiDate" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Label Content="last Maintenance:" Grid.Row="3" Grid.Column="0" FontSize="17" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" />
        <DatePicker Name="dplmiDate" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Label Content="Total Distance:" Grid.Row="4" Grid.Column="0" FontSize="17" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" />
        <TextBlock x:Name="txbTotalDistance" Grid.Column="1" Grid.Row="4" Text="enter total distance ehre"/>

        <Label Content="Distance from last Maintenance:" Grid.Row="5" Grid.Column="0" FontSize="12" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" />
        <TextBlock x:Name="txbDistance" Grid.Column="1" Grid.Row="5" Text="enter distance since last masdsmsd" />
        
        <Label Content="Fuel:" Grid.Row="6" Grid.Column="0" FontSize="16" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" />
        <TextBlock x:Name="txbFuel" Grid.Column="1" Grid.Row="6" Text="enter fuel" />
        
    </Grid>
</Window>
