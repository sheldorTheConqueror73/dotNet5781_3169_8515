<Window x:Class="dotNet5781_03B_3169_8515.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotNet5781_03B_3169_8515"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="890">
    <Grid Background="Transparent" >
       
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <TabControl  VerticalAlignment="Stretch" >
            <TabItem Header="Bus Mangment" Height="auto" Width="auto" Background="#1576bb"  VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Foreground="White">
                <Grid Name="mainGrid">
                    <Grid.Background>
                        <ImageBrush ImageSource="src/pics/spaceilluminati.jpg"/>
                    </Grid.Background>
                    <Grid  Name="busesgrid" Background="Transparent" Margin="0,0,396,0" >
                        <Viewbox  Grid.Row="1" HorizontalAlignment="Left">
                            <ListBox  HorizontalAlignment="Left"  Height="600" Grid.Row="0" VerticalAlignment="Top" Width="660"  x:Name="bsDisplay" ItemsSource="{Binding}" BorderThickness="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Stretch" FontSize="20" Background="Transparent" Foreground="LawnGreen" MouseDoubleClick="bsDisplay_MouseDoubleClick">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Style.Triggers>
                                            <Trigger Property="IsSelected" Value="True" >
                                                <Setter Property="Background" Value="Transparent" />
                                                <Setter Property="Foreground" Value="DarkSeaGreen" />
                                            </Trigger>
                                        </Style.Triggers>
                                        <Style.Resources>
                                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/>
                                        </Style.Resources>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel  Orientation="Horizontal">
                                            <TextBlock  x:Name="tBoxBusList" Text="{Binding}" Width="400"/>
                                            <Button  Content="Send to drive" ToolTip="Drive Bus" Click="Button_SendDrive" Tag="{Binding Path=.}" Margin="30,0,0,0"/>
                                            <Button  Content="Delete" Click="Button_Delete" ToolTip="Delete" Tag="{Binding Path=.}" Margin="30,0,0,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Viewbox>
                    </Grid>
                    <Grid Name="functionGrid" Margin="390,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="addBtn" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Add New Bus"  Click="addBtn_Click"></Button>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Settings" Height="auto" Width="auto" Background="#1576bb" Foreground="White" >
                <Grid Background="AliceBlue"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
