<Window x:Class="PL.addLineUserPromt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="addLineUserPromt" Height="250" WindowStartupLocation="CenterScreen" Width="350" WindowStyle="None" Closing="onClose">
    <Grid>
        <TextBox HorizontalAlignment="Left"  x:Name="txbDistance" Height="23" Margin="185,60,0,0" TextWrapping="Wrap" Text="enter text here" VerticalAlignment="Top" Width="71"/>
        <Label Content="Distance berween Stations: " HorizontalAlignment="Left" Margin="25,57,0,0" VerticalAlignment="Top" />
        <Label Content="Time berween Stations:" HorizontalAlignment="Left" Margin="25,88,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left"  HorizontalContentAlignment="Center" Height="23" x:Name="txbTime" Margin="185,91,0,0" TextWrapping="Wrap" Text="hh:mm" VerticalAlignment="Top" Width="71"/>
        <Label Name="lblError" Foreground="red" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Margin="10,148,0,0" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="322" Height="39" />

    </Grid>
</Window>
